<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Assignment1.MainPage"
             NavigatedTo="ContentPage_NavigatedTo">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="Medical Charting - Patients"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <!-- Search Section -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="SearchEntry" 
                       Placeholder="Search patients..." 
                       Text="{Binding Query}"
                       WidthRequest="300"/>
                <Button Text="Search" 
                        Clicked="SearchClicked"/>
            </HorizontalStackLayout>

            <!-- Inline Add Card -->
            <Frame IsVisible="{Binding InlineCardVisibility}" 
                   BorderColor="Gray" 
                   CornerRadius="5" 
                   Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add New Patient" FontSize="18" FontAttributes="Bold"/>
                    <Entry Placeholder="Name" Text="{Binding InlinePatient.Model.Name}"/>
                    <Entry Placeholder="Address" Text="{Binding InlinePatient.Model.Address}"/>
                    <Entry Placeholder="Birthdate" Text="{Binding InlinePatient.Model.Birthdate}"/>
                    <Entry Placeholder="Race" Text="{Binding InlinePatient.Model.Race}"/>
                    <Entry Placeholder="Gender" Text="{Binding InlinePatient.Model.Gender}"/>
                    <Button Text="Save" Clicked="InlineAddClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Add Patient" 
                        Clicked="AddClicked"/>
                <Button Text="Edit Selected" 
                        Clicked="EditClicked"/>
                <Button Text="Delete Selected" 
                        Clicked="DeleteClicked"/>
                <Button Text="Inline Add" 
                        Clicked="ExpandCardClicked"/>
            </HorizontalStackLayout>

            <!-- Patient List -->
            <CollectionView x:Name="PatientList" 
                            ItemsSource="{Binding Patients}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedPatient}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" 
                               Padding="10" 
                               BorderColor="LightGray"
                               CornerRadius="5">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Model.Name}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Model.Address}" 
                                       FontSize="14"/>
                                <Label Text="{Binding Model.Birthdate}" 
                                       FontSize="14"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Model.Race}" 
                                           FontSize="14"/>
                                    <Label Text="{Binding Model.Gender}" 
                                           FontSize="14"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
