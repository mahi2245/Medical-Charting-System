<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Assignment1.Views.AppointmentMainPage"
             NavigatedTo="ContentPage_NavigatedTo">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                Text="Medical Charting - Appointments"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <!-- Search Section -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="SearchEntry" 
                       Placeholder="Search appointments..." 
                       Text="{Binding Query}"
                       WidthRequest="300"/>
                <Button Text="Search" 
                        Clicked="SearchClicked"/>
            </HorizontalStackLayout>

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Schedule Appointment" 
                        Clicked="AddClicked"/>
                <Button Text="Edit Selected" 
                        Clicked="EditClicked"/>
                <Button Text="Delete Selected" 
                        Clicked="DeleteClicked"/>
            </HorizontalStackLayout>

            <!-- Appointment List -->
            <CollectionView x:Name="AppointmentList" 
                            ItemsSource="{Binding Appointments}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedAppointment}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" 
                               Padding="10" 
                               BorderColor="LightGray"
                               CornerRadius="5">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Model.Date, StringFormat='Date: {0:MM/dd/yyyy h:mm tt}'}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Model.Patient.Name, StringFormat='Patient: {0}'}" 
                                       FontSize="14"/>
                                <Label Text="{Binding Model.Physician.Name, StringFormat='Physician: {0}'}" 
                                       FontSize="14"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
